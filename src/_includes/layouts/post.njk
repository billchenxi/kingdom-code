---
nav: true;
layout: layouts/base.njk
---
<div class="container kc-blog">

  <header role="banner" class="kc-blog__header">
    {% if hero_img %}
    <img src="{{ hero_img }}" alt="{{ title }}" class="kc-blog__header__img" />
    {% endif %}

    <h1 itemprop="name">{{ title | orphanWrap | safe }}</h1>
    <date>{{ date | readableDate }}</date>
  </header>

  <main class="kc-blog__body">
    {{ layoutContent | safe }}
  </main>

  {% if author %}

    {% for person in people | sort(false, false, 'name') %}

      {% if author == person.name %}
        <div class="kc-blog__author">
          <img src="/_assets/_img/people/{{ person.img if person.img else "no-avatar.jpg" }}" alt="{{ person.name }}" class="kc-blog__author__img">
          <p>{% if person.href %}<a href="{{ person.href }}" target="_blank" rel="noopener">{% endif %}{{ person.name }}{% if person.href %}</a>{% endif %}</p>
          <p>{{ person.bio }}</p>
        </div>
      {% endif %}

    {% endfor %}
  {% endif %}

  <a class="kc-blog__back" href="/blog">Back to all posts</a>

  {% if canonical %}
  <small class="thought-canonical">This post originally appeared at:<br /><a href="{{ canonical }}">{{ canonical }}<a/></small>
  {% endif %}

</div>
